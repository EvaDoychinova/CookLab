@using CookLab.Common
@using CookLab.Models.ViewModels.Categories

@model CategoriesListViewModel

@{
    ViewData["Title"] = GlobalConstants.CategoriesAllPageTitle;
}

<div class="container-fluid p-0">
    <div class="text-center">
        <h2 class="section-heading">@ViewData["Title"]</h2>
        <h5 class="section-subheading">What recipe are you looking for?</h5>
    </div>
    <div class="row no-gutters">
        @foreach (var category in Model.Categories)
        {
        <div class="col-lg-4 col-sm-6">
            <a class="portfolio-box" asp-controller="Recipes" asp-action="ByCategory(@category.Id)">
            <img class="img-fluid" src="@category.ImageUrl" />
            <div class="portfolio-box-caption">
                <div class="project-name">@category.Name</div>
            </div>
            </a>
        </div>
        }
    </div>
</div>
