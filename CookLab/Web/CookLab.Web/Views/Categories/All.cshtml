@using CookLab.Common
@using CookLab.Models.ViewModels.Categories

@model CategoriesListViewModel

@{
    ViewData["Title"] = GlobalConstants.CategoriesAllPageTitle;
}

<div class="container-fluid p-0">
    <div class="text-center my-lg-5 mb-5">
        <h2 class="section-heading">@ViewData["Title"]</h2>
        <h5 class="section-subheading">What recipe are you looking for?</h5>
    </div>
    <div class="row no-gutters">
        @foreach (var category in Model.Categories)
        {
            <div class="col-lg-4 col-sm-6 p-3">
                <a class="portfolio-box" asp-controller="Recipes" asp-action="AllByCategory(@category.Id)">
                    <img class="img-fluid portfolio-image" src="~/assets/img/categories/@category.ImageUrl" />
                    <div class="portfolio-box-caption">
                        <h5 class="project-name">@category.Name</h5>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
