@using CookLab.Models.ViewModels.Categories

@model CategoryViewModel

<div class="container d-flex flex-column align-items-center">
    <h2 class="my-lg-5 mb-5">@this.ViewData["Title"]</h2>

    <form asp-controller="Categories" asp-action="Create" class="form col-md-6 d-flex flex-column" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="ImageUrl" class="custom-file-label"></label>
            <input asp-for="ImageUrl" class="custom-file-input" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <input type="submit" value="Create" class="btn btn-primary align-self-stretch" />

    </form>
</div>
