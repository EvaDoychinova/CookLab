@using CookLab.Common
@using CookLab.Models.InputModels.Categories

@model CategoryInputModel

@{
    ViewData["Title"] = GlobalConstants.CategoriesCreatePageTitle;
}

<div class="container pt-md-5 d-flex flex-column align-items-center">
    <h2>@this.ViewData["Title"]</h2>

    <form asp-controller="Categories" asp-action="Create" class="form col-md-4">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" type="text" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <input type="submit" value="Create" class="btn btn-primary" />
    </form>
</div>
