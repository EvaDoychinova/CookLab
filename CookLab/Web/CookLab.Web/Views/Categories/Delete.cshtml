@using CookLab.Common
@using CookLab.Models.ViewModels.Categories

@model CategoryDeleteViewModel

@{
    this.ViewData["Title"] = string.Format(PageTitles.DeleteCategoryPageTitle, Model.Name);
}

<div class="row h-100 align-items-center justify-content-center text-center">
    <div class="col-lg-10 align-self-end">
        <h1 class="text-white font-weight-bold">@this.ViewData["Title"]</h1>
        <hr class="divider my-4" />
    </div>
    <div class="col-lg-8 align-self-baseline">
        <h4 class="text-white-75 font-weight-light mb-5">
            Are you sure you want to delete category @Model.Name?
        </h4>
        <div class="row justify-content-md-center">
            <a class="btn btn-danger col-md-3 m-3" asp-area="" asp-controller="Categories" asp-action="Delete">Delete</a>
            <a class="btn btn-secondary col-md-3 m-3" asp-controller="Categories" asp-action="Details" asp-route-id="@Model.Id">Back</a>
        </div>
    </div>
</div>
