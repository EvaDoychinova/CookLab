@using CookLab.Common
@using CookLab.Models.ViewModels.Ingredients

@model IngredinetsListViewModel

@{
    this.ViewData["Title"] = PageTitles.IngredientsAllPagetitle;
}

<div class="container-fluid p-0 text-center">
    <div class="text-center my-lg-5 mb-5">
        <h2 class="section-heading">@ViewData["Title"]</h2>
        <h5 class="section-subheading">Which ingredients to you want to see?</h5>
    </div>
    <a class="btn btn-secondary mb-5" asp-controller="Ingredients" asp-action="Create">Create new ingredient</a>
    <table class="table table-striped table-light table-hover text-center col-md-6 mx-auto">
        <thead>
            <tr>
                <th scope="col">Ingredient</th>
                <th scope="col">Nutrition</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ingredient in Model.Ingredients)
            {
                <tr>
                    <th scope="row">
                        <a class="btn btn-outline-secondary" asp-controller="Ingredients" asp-action="Details" asp-route-id="@ingredient.Id">@ingredient.Name</a>
                    </th>
                    <td>
                        @if (ingredient.NutritionPer100Grams == null)
                        {
                            <a class="btn btn-primary" asp-controller="Nutritions" asp-action="Create" asp-route-id="@ingredient.Id">Add Nutrition Info</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>