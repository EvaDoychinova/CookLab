@using CookLab.Common
@using CookLab.Models.ViewModels.Ingredients

@model IngredientViewModel

@{
    this.ViewData["Title"] = Model.Name;
}

<div class="row h-100 align-items-center justify-content-center text-center">
    <div class="col-lg-10 align-self-end">
        <h2 class="text-white font-weight-bold">@this.ViewData["Title"]</h2>
        <hr class="divider my-4" />
    </div>
    <div class="col-lg-8 align-self-baseline">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Nutrition per 100 Grams</th>
                    <th scope="col">@Model.Name</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Volume per 100 Grams</th>
                    <td>@Model.VolumeInMlPer100Grams</td>
                </tr>
                <tr>
                    <th scope="row">Calories</th>
                    <td>@Model.Nutrition.Calories</td>
                </tr>
                <tr>
                    <th scope="row">Carbohydrates</th>
                    <td>@Model.Nutrition.Carbohydrates</td>
                </tr>
                <tr>
                    <th scope="row">Fats</th>
                    <td>@Model.Nutrition.Fats</td>
                </tr>
                <tr>
                    <th scope="row">Proteins</th>
                    <td>@Model.Nutrition.Proteins</td>
                </tr>
                <tr>
                    <th scope="row">Fibres</th>
                    <td>@Model.Nutrition.Fibres</td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <a class="btn btn-primary col m-3" asp-area="" asp-controller="Ingredients" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-danger col m-3" asp-area="" asp-controller="Ingredients" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            <a class="btn btn-secondary col m-3" asp-area="" asp-controller="Ingredients" asp-action="All">Back to Categories</a>
        </div>
    </div>
</div>