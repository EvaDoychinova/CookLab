@using CookLab.Models.ViewModels.Ingredients

@model IngredientViewModel

@{
    this.Layout = "_LayoutWithSideBar";
    this.ViewData["Title"] = Model.Name;
}

<div class="row h-100 align-items-center justify-content-center text-center mt-md-5 w-auto">
    <div class="col-lg-10 align-self-end">
        <h2 class="text-white font-weight-bold">@Model.Name</h2>
        <h4>Volume per 100 Grams: @Model.VolumeToString ml</h4>
        <hr class="divider my-4" />
    </div>
    <div class="col-lg-8 align-self-baseline">
        @if (Model.NutritionPer100Grams!=null)
        {
            <table class="table table-striped table-hover table-light col-sm-8 col-md-10 col-lg-8 mx-auto">
                <thead>
                    <tr>
                        <th scope="col">Nutrition per 100 Grams</th>
                        <th scope="col">@Model.Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Calories</th>
                        <td class="text-primary">@Model.NutritionPer100Grams.CaloriesToString</td>
                    </tr>
                    <tr>
                        <th scope="row">Carbohydrates</th>
                        <td class="text-primary">@Model.NutritionPer100Grams.CarbohydratesToString</td>
                    </tr>
                    <tr>
                        <th scope="row">Fats</th>
                        <td class="text-primary">@Model.NutritionPer100Grams.FatsToString</td>
                    </tr>
                    <tr>
                        <th scope="row">Proteins</th>
                        <td class="text-primary">@Model.NutritionPer100Grams.ProteinsToString</td>
                    </tr>
                    <tr>
                        <th scope="row">Fibres</th>
                        <td class="text-primary">@Model.NutritionPer100Grams.FibresToString</td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <a class="btn btn-outline-primary m-3" asp-area="" asp-controller="Nutritions" asp-action="Create" asp-route-id="@Model.Id">Add nutrition</a>
        }
    <div class="row">
        @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <a class="btn btn-primary col m-3 my-auto" asp-area="Administration" asp-controller="Ingredients" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-danger col m-3 my-auto" asp-area="Administration" asp-controller="Ingredients" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        }
        <a class="btn btn-secondary col m-3" asp-area="" asp-controller="Ingredients" asp-action="All">Back to All</a>
    </div>
    </div>
</div>