@using CookLab.Common
@using CookLab.Data.Models.Enums;
@using CookLab.Models.InputModels.CookingVessel

@model CookingVesselInputModel

@{
    ViewData["Title"] = string.Format(PageTitles.CookingVesselCreatePageTitle);
}

<div class="container d-flex flex-column align-items-center">
    <h2 class="my-lg-3 mb-3">@ViewData["Title"]</h2>

    <form asp-controller="CookingVessels" asp-action="Create" method="post" class="form col-md-6 d-flex flex-column">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form group mb-3">
            <label asp-for="Form"></label>
            <select asp-for="Form" class="form-control" asp-items="@Html.GetEnumSelectList<PanForm>()">
                <option selected disabled value="0">Choose cooking vessel form...</option>
            </select>
            <span asp-validation-for="Form" class="text-danger"></span>
        </div>

        <div class="form-group d-none">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group d-none">
            <label asp-for="Diameter"></label>
            <input type="number" step="any" asp-for="Diameter" class="form-control" disabled />
            <span asp-validation-for="Diameter" class="text-danger"></span>
        </div>

        <div class="form-group d-none">
            <label asp-for="SideA"></label>
            <input type="number" step="any" asp-for="SideA" class="form-control" disabled/>
            <span asp-validation-for="SideA" class="text-danger"></span>
        </div>

        <div class="form-group d-none">
            <label asp-for="SideB"></label>
            <input type="number" step="any" asp-for="SideB" class="form-control" disabled/>
            <span asp-validation-for="SideB" class="text-danger"></span>
        </div>

        <div class="form-group d-none">
            <label asp-for="Height"></label>
            <input type="number" step="any" asp-for="Height" class="form-control" disabled/>
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>

        <div class="form-group d-none">
            <label asp-for="Area"></label>
            <input type="number" step="any" asp-for="Area" class="form-control" disabled/>
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>

        <input type="submit" value="Create cooking vessel" class="btn btn-primary align-self-stretch my-3" />
    </form>
</div>

@section Scripts{ 
    <script>document.onload = solve();</script>
} 