@using CookLab.Models.ViewModels.CookingVessels

@model CookingVesselViewModel

@{
    this.Layout = "_LayoutWithSideBar";
    this.ViewData["Title"] = Model.Name;
}

<div class="row h-100 align-items-center justify-content-center text-center mt-md-5 w-auto">
    <div class="col-lg-10">
        <h2 class="text-white font-weight-bold">@Model.Name</h2>
        <h4>Area: @Model.AreaToString cm<sup>2</sup></h4>
        <h4>Volume: @Model.VolumeToString ml</h4>
        <hr class="divider my-4" />
    </div>
    <div class=" col-10 col-sm-8 col-md-10 col-lg-6">
        <table class="table table-striped table-hover table-light mx-auto">
            <thead>
                <tr>
                    <th scope="col">Dimension</th>
                    <th scope="col">Value (cm)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Diameter != null)
                {
                    <tr>
                        <th scope="row">Diameter</th>
                        <td class="text-primary">@Model.DiameterToString</td>
                    </tr>
                }
                @if (Model.SideA != null)
                {
                    <tr>
                        <th scope="row">SideA</th>
                        <td class="text-primary">@Model.SideAToString</td>
                    </tr>
                }
                @if (Model.SideB != null)
                {
                    <tr>
                        <th scope="row">SideB</th>
                        <td class="text-primary">@Model.SideBToString</td>
                    </tr>
                }
                <tr>
                    <th scope="row">Height</th>
                    <td class="text-primary">@Model.HeightToString</td>
                </tr>
            </tbody>
        </table>

        <div class="row">
            @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
            <a class="btn btn-danger col m-3 my-auto" asp-area="Administration" asp-controller="CookingVessels" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            }
            <a class="btn btn-secondary col m-3" asp-area="" asp-controller="CookingVessels" asp-action="All">Back to All</a>
        </div>
    </div>
</div>