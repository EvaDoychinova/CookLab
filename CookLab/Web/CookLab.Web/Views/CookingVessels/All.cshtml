@using CookLab.Models.ViewModels.CookingVessels

@model CookingVesselsListViewModel

@{
    this.Layout = "_LayoutWithSideBar";
    this.ViewData["Title"] = PageTitles.CookingVesselAllPageTitle;
}

<div class="container-fluid p-0 text-center pb-3">
    <div class="text-center my-lg-5 mb-5">
        <h2 class="section-heading">@ViewData["Title"]</h2>
        <h5 class="section-subheading">Do you find the one you need?</h5>
    </div>
    <a class="btn btn-secondary mb-5" asp-controller="CookingVessels" asp-action="Create">Create new cooking vessel</a>
    <table class="table table-striped table-light table-hover text-center col-md-6 mx-auto mb-0">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th score="col">Area (cm<sup>2</sup>)</th>
                <th scope="col">Volume (cm<sup>3</sup>)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cookingVessel in Model.CookingVessels)
             {
                <tr>
                    <th scope="row" class="py-2">
                        <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="CookingVessels" asp-action="Details" asp-route-id="@cookingVessel.Id">
                            @cookingVessel.Name
                        </a>
                    </th>
                    <td class="text-primary">
                        @cookingVessel.AreaToString
                    </td>
                    <td class="text-primary">
                        @cookingVessel.VolumeToString
                    </td>
                </tr>
             }
        </tbody>
    </table>
</div>

<partial name="_PaginationPartial" model="@Model"/>