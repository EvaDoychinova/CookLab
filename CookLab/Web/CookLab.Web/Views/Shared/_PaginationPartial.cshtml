@using CookLab.Models.ViewModels

@model PaginationViewModel

<div class="my-3">
    <ul class="pagination justify-content-center">
        @if (1 < Model.CurrentPage - 3)
        {
            <li class="page-item">
        <a class="page-link" asp-area="" asp-action="@this.ViewData["Action"]" asp-route-id="1" asp-route-filterId="@if (this.ViewData["FromQuery"]!=null){<text>@this.ViewData["FromQuery"]</text>}">1</a>
            </li>
        }
        <li class="page-item @if (!Model.HasPreviousPage) {<text>disabled</text>} ">
            <a class="page-link" asp-area="" asp-action="@this.ViewData["Action"]" asp-route-id="@Model.PreviousPage" asp-route-filterId="@if (this.ViewData["FromQuery"]!=null){<text>@this.ViewData["FromQuery"]</text>}">Prev</a>
        </li>
        @for (int i = Model.CurrentPage - 2; i < Model.CurrentPage; i++)
        {
            @if (i > 0)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="" asp-action="@this.ViewData["Action"]" asp-route-id="@i" asp-route-filterId="@if (this.ViewData["FromQuery"]!=null){<text>@this.ViewData["FromQuery"]</text>}">@i</a>
                </li>
            }
        }
        <li class="page-item active" aria-current="page">
            <a class="page-link">@Model.CurrentPage <span class="sr-only">(current)</span></a>
        </li>
        @for (int i = Model.CurrentPage + 1; i < Model.CurrentPage + 3; i++)
        {
            @if (i <= Model.TotalPagesCount)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="" asp-action="@this.ViewData["Action"]" asp-route-id="@i" asp-route-filterId="@if (this.ViewData["FromQuery"]!=null){<text>@this.ViewData["FromQuery"]</text>}">@i</a>
                </li>
            }
        }
        <li class="page-item @if (!Model.HasNextPage) {<text>disabled</text>}">
            <a class="page-link" asp-area="" asp-action="@this.ViewData["Action"]" asp-route-id="@Model.NextPage" asp-route-filterId="@if (this.ViewData["FromQuery"]!=null){<text>@this.ViewData["FromQuery"]</text>}">Next</a>
        </li>
        @if (Model.TotalPagesCount > Model.CurrentPage + 3)
        {
            <li class="page-item">
                <a class="page-link" asp-area="" asp-action="@this.ViewData["Action"]" asp-route-id="@Model.TotalPagesCount" asp-route-filterId="@if (this.ViewData["FromQuery"]!=null){<text>@this.ViewData["FromQuery"]</text>}">@Model.TotalPagesCount</a>
            </li>
        }
    </ul>
</div>